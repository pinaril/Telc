<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:id="@+id/dituqudianANDwodeweizhi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@drawable/z_xml_layout_background"
            android:clickable="true"
            android:onClick="dituqudian"
            android:layout_weight="1" >

       
            <TextView 
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:drawableTop="@drawable/z_selptfrom_map"
                android:text="地图取点"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@drawable/z_xml_layout_background"
            android:clickable="true"
            android:onClick="wodeweizhi"
            android:layout_weight="1" >
            <TextView 
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="我的位置"
                android:drawableTop="@drawable/z_toolbox_fls"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>